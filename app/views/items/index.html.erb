<% if model_signed_in? %>
  <% @items.each do |item| %>

    <% if item.completed? %>
      <h2 style="opacity: 0.5;"><strike><%= link_to item.title, item %></strike></h2>
      <p style="opacity: 0.5;"><%= item.description %></p>
      <p><%= link_to "Mark as Complete", complete_item_path(item), method: :patch %></p>
      <p><%= link_to "Delete", item, method: :delete, data: {confirm: "Are you sure?"} %></p>
    <% else %>
    <h2><%= link_to item.title, item %></h2>
    <p><%= item.description %></p>
    <p><%= link_to "Mark as Complete", complete_item_path(item), method: :patch %></p>
    <p><%= link_to "Delete", item, method: :delete, data: {confirm: "Are you sure?"} %></p>
    <% end %>
  <% end %>
<% else %>
  <%= render 'layouts/static_landing_page' %>
<% end %>
