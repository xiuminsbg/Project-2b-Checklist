<!DOCTYPE html>
<html>
  <head>
    <title>Checklist</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <%= link_to "CHECKLIST", root_path, class: "navbar-brand" %>
        </div>
        <ul class="nav navbar-nav">
          <% if current_model.present? %>
            <li><%= link_to "Sign Out", destroy_model_session_path, method: :delete %></li>
        </ul>
          <% else %>
            <li><%= link_to "Sign Up", new_model_registration_path %></li>
            <li><%= link_to "Log In", new_model_session_path %></li>
          <% end %>
        </ul>
        <ul class="nav navbar-nav">
          <% if model_signed_in? %>
            <%= link_to "New Item", new_item_path, class: "navbar-text navbar-link navbar-right" %>
          <% end %>
        </ul>  
      </div>
    </nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
